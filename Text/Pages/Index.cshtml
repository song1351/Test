@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        form {
            margin-bottom: 10px;
        }

        label {
            display: inline-block;
            width: 150px;
        }

        input[type="text"] {
            width: 200px;
            padding: 5px;
        }

        button {
            padding: 5px 10px;
        }
    </style>
</head>

<body>
    <table>
        <thead>
            <tr>
                <th>Purchase Order ID</th>
                <th>Unit Price</th>
                <th>Order Quantity</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PurchaseOrderDetail)
            {
                <tr>
                    <td>@item.PurchaseOrderId</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.OrderQty</td>
                    <td>@item.TotalAmount</td> <!-- Display the total amount -->
                    <td>
                        <form asp-page-handler="Delete" asp-route-id="@item.PurchaseOrderId" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <form asp-page-handler="Insert" method="post">
        <label for="unitPrice">Unit Price:</label>
        <input type="text" name="unitPrice" required><br>

        <label for="orderQty">Order Quantity:</label>
        <input type="text" name="orderQty" required><br>

        <button type="submit">Insert</button>
    </form>



    

</body>
